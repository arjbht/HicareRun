<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraint2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/lnr_image"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:text="Service Plan"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:id="@+id/lnrCapture"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="7dp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:gravity="center">
                    <ImageView
                        android:id="@+id/img_capture"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:text="Service Plan"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_addimage" />
                        </LinearLayout>




                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">


                            <TextView
                                android:id="@+id/txt_technician"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="Arjun Bhatt"
                                android:textColor="@color/black"
                                android:textSize="18dp" />



                        <LinearLayout
                            android:id="@+id/tecnicianCode"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="3dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/lnr_image">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Employee Code"
                                android:textSize="14dp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/txt_code"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="7dp"
                                android:text=""
                                android:textSize="14dp" />

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/lnr_added"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="2dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/lnr_image">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="Mobile No."
                                android:textSize="14dp"
                               />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/txtMobile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="7dp"
                                android:text="9878765767"
                                android:textSize="14dp" />

                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/tab_textColor"
                    app:layout_constraintBottom_toBottomOf="@id/lnr_image"/>


            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>


</layout>
